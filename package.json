{
  "name": "sonar-sync-extension",
  "displayName": "Sonar Sync Extension",
  "description": "A Visual Studio Code extension that synchronizes issues from SonarQube to the Problems panel.",
  "version": "0.1.0",
  "publisher": "sonar-sync",
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "sonarqube",
    "sonar",
    "quality",
    "lint"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sonar-sync-extension"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onCommand:sonarSync.start",
    "onView:sonarIssuesByAuthor"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "package": "vsce package"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sonar-sync-explorer",
          "title": "Sonar Sync",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "sonar-sync-explorer": [
        {
          "id": "sonarIssuesByAuthor",
          "name": "Issues by Author",
          "icon": "$(list-ordered)"
        }
      ]
    },
    "commands": [
      {
        "command": "sonarSync.start",
        "title": "Start Sonar Sync",
        "icon": "$(refresh)"
      },
      {
        "command": "sonarSync.toggleGrouping",
        "title": "Toggle Grouping Mode (Author/File)",
        "icon": "$(list-unordered)"
      },
      {
        "command": "sonarSync.nextPage",
        "title": "Next Page",
        "icon": "$(arrow-right)"
      },
      {
        "command": "sonarSync.prevPage",
        "title": "Previous Page",
        "icon": "$(arrow-left)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sonarSync.prevPage",
          "when": "view == sonarIssuesByAuthor",
          "group": "navigation@1"
        },
        {
          "command": "sonarSync.nextPage",
          "when": "view == sonarIssuesByAuthor",
          "group": "navigation@2"
        },
        {
          "command": "sonarSync.toggleGrouping",
          "when": "view == sonarIssuesByAuthor",
          "group": "navigation@3"
        },
        {
          "command": "sonarSync.start",
          "when": "view == sonarIssuesByAuthor",
          "group": "navigation@4"
        }
      ]
    },
    "configuration": {
      "title": "Sonar Sync",
      "properties": {
        "sonar.host": {
          "type": "string",
          "default": "",
          "description": "The URL of the SonarQube/SonarCloud server."
        },
        "sonar.token": {
          "type": "string",
          "default": "",
          "description": "The authentication token for SonarQube."
        },
        "sonar.projectKey": {
          "type": "string",
          "default": "",
          "description": "The project key in SonarQube."
        },
        "sonar.cookie": {
          "type": "string",
          "default": "",
          "description": "Optional session cookie for authentication."
        },
        "sonar.queryParams": {
          "type": "object",
          "default": {},
          "description": "Additional query parameters for the SonarQube issue search API (e.g., {\"types\": \"BUG\", \"severities\": \"CRITICAL\"})."
        }
      }
    }
  },
  "dependencies": {
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "@types/node": "^14.x",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.14.0",
    "typescript": "^4.3.2"
  }
}